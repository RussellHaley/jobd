. ../../config.sub
. ../../vars.sh

sbin_PROGRAMS=jobd

jobd_CXXFLAGS="-I../.. -I.. -I. -include ../../config.h -std=c++11 -Wall -Werror -I/usr/local/include $libucl_CFLAGS $kqueue_CFLAGS"
jobd_LDFLAGS="-L/usr/lib -L/usr/local/lib $libucl_LDFLAGS"
jobd_LDADD="$libucl_LDADD $kqueue_LDADD"
jobd_SOURCES=`ls *.cpp *.c | tr '\n' ' '`
#log.c job.c chroot.cpp launchd.cpp dataset.cpp manager.c manifest.c socket.c keepalive.c calendar.c timer.c pidfile.c flopen.c"
jobd_DEPENDS="$libucl_DEPENDS $kqueue_DEPENDS"

uname=$(uname)
if [ "`uname`" = 'FreeBSD' ] ; then
        #jobd_SOURCES="${jobd_SOURCES} jail.cpp"
        jobd_LDADD="${jobd_LDADD} -ljail"
fi

custom_target 'jobd.8' 'jobd.8.xml' \
        'docbook2mdoc jobd.8.xml > jobd.8'

custom_target 'jobd.8.html' 'jobd.8.xml' \
        'docbook2mdoc jobd.8.xml | mandoc -mdoc -T html > jobd.8.html'

manpage 'jobd.8'

# DEADWOOD: no time for this port right now
## MacOS needs a POSIX clock_gettime() function
##if [ `uname` = "Darwin" ] ; then
#	launchd_SOURCES="$launchd_SOURCES ../vendor/PosixMachTiming/src/timing_mach.c"
#fi
     
# TODO: add a --debug option to configure; this wont work because CFLAGS specifies -O2
#if [ -n "$DEBUG" ] ; then
#	launchd_CFLAGS="$launchd_CFLAGS -O0 -g"
#fi

#TODO: add a valgrinding option:
#make clean ; make all CFLAGS="-g -O0" && valgrind --tool=memcheck --leak-check=yes --show-reachable=yes --num-callers=20 --track-fds=yes ./launchd -fv 2>&1|less

write_makefile
