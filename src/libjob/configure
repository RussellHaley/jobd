. ../../config.sub
. ../../vars.sh

LIBRARIES=libjob

libjob_CXXFLAGS="-include ../../config.h -I../../vendor -fPIC -std=c++11 -Wall -Werror -isystem /usr/local/include $libucl_CFLAGS $kqueue_CFLAGS"
libjob_LDFLAGS="-L/usr/local/lib -fPIC $libucl_LDFLAGS"
libjob_LDADD="$libucl_LDADD $kqueue_LDADD"
libjob_SOURCES=`ls *.cpp | tr '\n' ' '`
libjob_SONAME="libjob.so.0"

if [ $check_program_docbook_to_man = "1" ] ; then
	custom_target 'job.5' 'job.5.xml' \
		'docbook-to-man job.5.xml > job.5 || true'
	
	custom_target 'job.5.html' 'job.5.xml' \
		'docbook2mdoc job.5.xml | mandoc -mdoc -T html > job.5.html'
	
	manpage 'job.5'
fi

write_makefile
